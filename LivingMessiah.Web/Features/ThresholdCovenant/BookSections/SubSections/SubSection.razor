@using SubSectionType = LivingMessiah.Web.Features.ThresholdCovenant.BookSections.SubSections.Enums.SectionType

@if (SelectedSubSectionCard is not null)
{
	<DynamicComponent Type="SelectedSubSectionCard" />
}
else
{
	<h4><span class="badge bg-warning"> <code>SelectedBookSectionCard</code> is null</span></h4>
}

@code {
	[Parameter, EditorRequired] public SubSectionType? SectionType { get; set; }

	protected Type? SelectedSubSectionCard;

	protected override void OnParametersSet()
	{
		SelectedSubSectionCard = Type.GetType($"{DynamicComponentPaths.SubSectionCards}{SectionType!.Name}");
	}
}
