@using LivingMessiah.Web.Features.Leadership.Enums
@using LivingMessiah.Web.Features.Leadership.Biographies
@using Syncfusion.Blazor.Navigations

<SfAccordion ExpandMode="ExpandMode.Single">
	<AccordionItems>
		@foreach (var item in Office.List
		.OrderBy(o => o.Sort)
		.Where(w => w.IsFilled == true).ToList())
		{
			<AccordionItem>
				<HeaderTemplate>
					<div class="my-1">
						<img src="@Blobs.Leadership(item.IconFile)" class="me-2 rounded-circle" />
						<img src="@Blobs.Leadership(item.IconFile2)" class="me-2 rounded-circle" />
						<br /> @item.OfficeHolderName  <i>@item.Title</i>
					</div>
				</HeaderTemplate>
				<ContentTemplate>

					<img src="@Blobs.Leadership(@item.ImageFile)"
						 class="w-100 p-3"
						alt="@item.OfficeHolderName" />

					@if (item.Value == Office.CongregationLeader)
					{
						
						<CongregationLeader />
					}
					else if (item.Value == Office.BeitDin1)
					{
						<BeitDin1 />
					}
					else if (item.Value == Office.BeitDin2)
					{
						<BeitDin2 />
					}
					else if (item.Value == Office.BeitDin3)
					{
						<BeitDin3 />
					}
					else if (item.Value == Office.Elder1)
					{
						<Elder1 />
					}
					else if (item.Value == Office.Elder2)
					{
						<Elder2 />
					}
					else if (item.Value == Office.Elder3)
					{
						<Elder3 />
					}
					else
					{
						<Elder4 />
					}

				</ContentTemplate>
			</AccordionItem>
		}
	</AccordionItems>
</SfAccordion>

<style>
	.e-accordion .e-acrdn-item.e-select > .e-acrdn-header {
			background: #ffc107 !important;
	}
</style>

