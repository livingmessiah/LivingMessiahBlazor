

<LoadingComponent IsLoading="VM==null">
	<EditForm Model="@VM"
						OnValidSubmit="UpdateWirecastLink"
						class="card card-body bg-light mt-5">
		<DataAnnotationsValidator />
		<ValidationSummary />

		<fieldset class="mt-3">
			<legend class="text-primary">Wirecast Link</legend>

			<div class="row mt-n2">

				<div class="col-sm-4">
					<div class="mb-3">
						<label for="wirecast" class="control-label">Wirecast Link</label>
						<InputText id="wirecast" class="form-control" @bind-Value="VM!.WirecastLink" />
						<ValidationMessage For="@(() => VM.WirecastLink)" />
					</div>
				</div>

			</div>
		</fieldset>

		<div class="row">
			<div class="col-sm-6">
				<div class="mb-3">
					<button type="submit" class="btn btn-primary btn-lg">
						<i class="fas fa-save"></i> Update
					</button>
				</div>
			</div>
		</div>

	</EditForm>
</LoadingComponent>

