<div class="pb-2 mt-4 mb-2 border-bottom">
	
	<h1><i class="@Icon"></i>  @Title</h1>

	<ul class="nav nav-pills">
		<li role="presentation" class="nav-item">
			<a class="nav-link active" data-toggle="pill" 
				 href="@IndexLeviticus">Leviticus</a>
		</li>
		<li role="presentation" class="nav-item">
