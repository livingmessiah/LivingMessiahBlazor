@using LivingMessiah.Web.LinkSmartEnums
@using Page = LivingMessiah.Web.Links.WindmillRanch

<div class="d-print-none mt-n2">
	<ul class="list-inline bg-light pl-2">
		@foreach (var item in Windmill.List.OrderBy(o => o.Value))
		{
			<li class="list-inline-item bg-light">
				<a class="badge badge-@item.Color" href="@item.Page">
					<small>@item.Title</small>
				</a>&nbsp;&nbsp;
			</li>
		}
	</ul>
</div>
