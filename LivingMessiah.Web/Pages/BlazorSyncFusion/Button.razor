@code {
	SfButton ToggleBtnObj;
	public string IconCss = "e-icons e-play";
	public string Content = "Play";
	public void OnToggleClick()
	{
		if (ToggleBtnObj.Content == "Play")
		{
			this.Content = "Pause";
			this.IconCss = "e-icons e-pause";
		}
		else
		{
			this.Content = "Play";
			this.IconCss = "e-icons e-play";
		}
	}
}

