<div class="d-print-none float-right">
	<a class="btn btn-sm btn-default" href="@LivingMessiah.Web.Links.ShabbatService.Index"
		 @onclick="@PrintFriendly_Button_Click">
		@((MarkupString)_oppositeIcon) @_oppositeToggleMsg
	</a>
</div>

@if (_isPrinterFriendly)
{
	<div class="d-print-none">
		<a class="btn btn-sm btn-default" href="javascript:window.print()">
			<span class="fas fa-print"></span> @_printMsg
		</a>
	</div>

	<h4 class="text-center">
		Living Messiah Ministries @Title
		@*Shabbat: @Html.GetNextShabbat()*@
	</h4>
}
else
{
<h2><i class="@LivingMessiah.Web.Links.ShabbatService.Icon"></i> @LivingMessiah.Web.Links.ShabbatService.Title</h2>
	<ShabbatMeter IsMini="true"
								Format="MMMM dd"
								IsPrinterFriendly="@_isPrinterFriendly"
								AdjustDaysOverride="0"></ShabbatMeter>
	<ul class="list-inline">
		<li><a href="@LivingMessiah.Web.Links.ShabbatService.Index"><small><b>@_printMsg</b></small></a></li>
	</ul>
}


