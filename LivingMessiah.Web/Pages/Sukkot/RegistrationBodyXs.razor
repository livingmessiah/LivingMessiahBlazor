@using LivingMessiah.Web.Pages.Sukkot.Constants
@using LivingMessiah.Web.Pages.Sukkot.RegistrationEnums

<hr class="warning" />

<div class="row">
	<div class="col-3">
		<p class="lead  text-warning"> Step 1</p>
	</div>
	<div class="col-9">
		<h4>Task - Getting Started</h4>

		@if (StatusFlagEnum.HasFlag(StatusFlagEnum.EmailConfirmation) == true)
		{
			<p class="lead"><b>Task completed</b></p>
		}
		else
		{
			<p class="lead">
				Print out this
				<a href="@LivingMessiah.Web.Pages.Sukkot.Constants.Blobs.UrlPDF(PDFs.RegistrationWalkThrough)"
					 class="btn btn-primary btn-sm" target="_blank">
					<i class="fas fa-file-pdf"> PDF </i>
				</a>
				or leave it open in another window as it will be helpful with the next step.
			</p>
		}

	</div>
</div>

<div class="row">
	<div class="col-3">
		@if (StatusFlagEnum.HasFlag(StatusFlagEnum.EmailConfirmation) == true)
		{
			<i class="fa fa-check fa-3x"></i>
		}
	</div>
	<div class="col-9">


	</div>
</div>


<hr class="warning" />

<div class="row">
	<div class="col-3">
		<p class="lead text-warning">Step 2</p>
	</div>
	<div class="col-9">
		<h4>Task - Living Messiah Account</h4>
	</div>
</div>

<div class="row">
	<div class="col-3">
		@if (StatusFlagEnum.HasFlag(StatusFlagEnum.EmailConfirmation) == true)
		{
			<i class="fa fa-check fa-3x"></i>
		}
	</div>
	<div class="col-9">
		<Step2EmailVerified StatusFlagEnum="@StatusFlagEnum"></Step2EmailVerified>
	</div>
</div>


<hr class="warning" />

<div class="row">
	<div class="col-3">
		<p class="lead text-warning">Step 3</p>
	</div>
	<div class="col-9">
		<h4>Task - Registration</h4>
	</div>
</div>

<div class="row">
	<div class="col-3">
		@if (StatusFlagEnum.HasFlag(StatusFlagEnum.RegistrationFormCompleted) == true)
		{
			<i class="fa fa-check fa-3x"></i>
		}
	</div>
	<div class="col-9">
		<Step3Registration IsXs="@IsXs" Model="" StatusFlagEnum="@StatusFlagEnum">

		</Step3Registration>
	</div>
</div>

<hr class="warning" />


@if (Other.IsMealsAvailable)
{
	<div class="row">
		<div class="col-3">
			<p class="lead text-warning">Step 4</p>
		</div>
		<div class="col-9">
			<h4>Task - Meal Ticket (optional)</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			@if (StatusFlagEnum.HasFlag(StatusFlagEnum.MealsFormCompleted) == true)
			{
				<i class="fa fa-check fa-3x"></i>
			}
		</div>
		<div class="col-9">
			<partial name=@PartialViews.Step4MealTicket model="Model" />
		</div>
	</div>
}
else
{
	<div class="row">
		<div class="col-3">
			<p class="lead text-warning">Step 4</p>
		</div>
		<div class="col-9">
			<h4><strike>Meal Ticket</strike></h4>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<i class="fas fa-ban fa-3x"></i>
		</div>
		<div class="col-9">
			<p class="text-warning">No Meals Offered</p>
		</div>
	</div>

}


<hr class="warning" />

<div class="row">
	<div class="col-3">
		<p class="lead text-warning">Step 5</p>
	</div>
	<div class="col-9">
		@if (StatusFlagEnum.HasFlag(StatusFlagEnum.PartiallyPaid) == true)
		{
			<h4>Task - Payment (partial)</h4>
		}
		else
		{
			<h4>Task - Payment</h4>
		}
	</div>
</div>

<div class="row">
	<div class="col-3">
		@if (StatusFlagEnum.HasFlag(StatusFlagEnum.FullyPaid) == true)
		{
			<i class="fa fa-check fa-3x"></i>
		}
		else
		{
			@if (StatusFlagEnum.HasFlag(StatusFlagEnum.PartiallyPaid) == true)
			{
				<i class="fa fa-star-half-empty fa-3x text-muted"></i>
			}
		}

	</div>
	<div class="col-9">
		<partial name=@PartialViews.Step5Payment model="Model" />
	</div>
</div>
