@using SukkotApi.Domain.Enums

<div class="card bg-light">

	<div class="card-header text-center">
		<h5>@IndexVM.Title</h5>
	</div>

	<div class="card-body">

		<h4 class="mt-4 border-bottom">IndexVM Root</h4>

		<dl class="row ml-2">
			<dt class="col-6">EmailAddress:</dt>
			<dd class="col-6">@IndexVM.EmailAddress</dd>
		</dl>

		<dl class="row ml-2">
			<dt class="col-6">UserName:</dt>
			<dd class="col-6">@IndexVM.UserName</dd>
		</dl>

		<h4 class="mt-4 border-bottom">IndexVM.HouseRulesAgreement</h4>

		@if (IndexVM.HouseRulesAgreement is not null)
		{
			<dl class="row ml-2">
				<dt class="col-6">Id:</dt>
				<dd class="col-6">@IndexVM.HouseRulesAgreement.Id</dd>
			</dl>
			<dl class="row">
				<dt class="col-6">AcceptedDate:</dt>
				<dd class="col-6">@IndexVM.HouseRulesAgreement.AcceptedDate</dd>
			</dl>
			<dl class="row">
				<dt class="col-6">TimeZone:</dt>
				<dd class="col-6">@IndexVM.HouseRulesAgreement.TimeZone</dd>
			</dl>
		}
		else
		{
			<p class="ml-2"><code>IndexVM.HouseRulesAgreement is null</code>  </p>
		}


		<h4 class="mt-4 border-bottom">IndexVM.RegistrationStep</h4>
		@if (IndexVM.RegistrationStep is not null)
		{

			<dl class="row ml-2">
				<dt class="col-6">Id:</dt>
				<dd class="col-6">@IndexVM.RegistrationStep.Id</dd>
			</dl>

			<dl class="row ml-2">
				<dt class="col-6">FamilyName:</dt>
				<dd class="col-6">@IndexVM.RegistrationStep.FamilyName</dd>
			</dl>

			<dl class="row ml-2">
				<dt class="col-6">TotalDonation:</dt>
				<dd class="col-6"><span class="float-right">@IndexVM.RegistrationStep.TotalDonation.ToString("C0")</span></dd>
			</dl>
			<dl class="row ml-2">
				<dt class="col-6">RemainingCost:</dt>
				<dd class="col-6"><span class="float-right">@IndexVM.RegistrationStep.RemainingCost.ToString("C0")</span></dd>
			</dl>
		}
		else
		{
			<p class="ml-2"><code>IndexVM.RegistrationStep is null</code></p>
		}


	</div>

</div>

<h4 class="mt-3">Status Flags <span class="float-right text-info"> <small> Status: @IndexVM.Status.Name <sup>(@IndexVM.Status.Value)</sup> </small></span></h4>

<table class="table table-striped table-sm my-5">
	<thead class="">
		<tr>
			<th>Item</th>
			<th>Check Box</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in AvailableStatusFlags)
		{
			<tr>
				<td>@item</td>
				<td class="align-content-center">
					<div class="form-group form-check">
						<input type="checkbox" class="form-check-input" checked="@IndexVM.Has(item)">
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>


