@using LivingMessiah.Web.SmartEnums
@using LivingMessiah.Web.Pages.Sukkot.SuperUser

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@* General <div class="row"></div> *@
<div class="d-print-none">
	<div class="d-none d-sm-block">

		<div class="row">
			<div class="col-sm-12">
				<small class="float-end">EMail: @DisplayVM!.EMail, @DisplayVM.Phone2 Status: @DisplayVM!.StatusName</small>
				<h4>General</h4>
			</div>
		</div>

	</div>

	<div class="d-block d-sm-none">

		<div class="row">
			<div class="col-2">
				<h4>General</h4>
			</div>
			<div class="col-10">
				<ul>
					<li>Registration#: @DisplayVM.Id</li>
					<li>EMail: @DisplayVM.EMail</li>
					<li>Phone: @DisplayVM.Phone</li>
					<li>Status: @DisplayVM.StatusName</li>
				</ul>
			</div>
		</div>

	</div>
</div>

<div class="row d-none d-print-block">
	<div class="col-5">
		<h3>General</h3>
	</div>
	<div class="col-7">
		<ul>
			<li>Registration#: @DisplayVM.Id</li>
			<li>EMail: @DisplayVM.EMail</li>
			<li>Phone: @DisplayVM.Phone</li>
			<li>Status: @DisplayVM.StatusName</li>
		</ul>
	</div>
</div>


@* House Rules Agreement *@
<hr class="warning d-print-none" />
<div class="row">
	<div class="col-sm-12">
		<small class="float-end">Agreed on: @DisplayVM.HouseRulesAgreementDate</small>
		<h4>House Rules Agreement</h4>
	</div>
</div>


@* Attendance *@
<hr class="warning d-print-none" />

<div class="row">
	<div class="col-12">
		<div class="float-end">
				<ul class="list-inline">
					<li class="list-inline-item" >Adults: <span class="">@DisplayVM.Adults</span></li>
					<li class="list-inline-item" >Child (Big):<span class="">@DisplayVM.ChildBig</span></li>
					<li class="list-inline-item" >Child (Small):<span class="">@DisplayVM.ChildSmall</span></li>
				</ul>
			</div>
		<h4>Attendance</h4>
	</div>
</div>

<div class="@MediaQuery.Xs.DivClass">
	<AttendanceDateCalendar IsXs="true"
													AttendanceDateList="DisplayVM.AttendanceDateList"
													AttendanceDateList2ndMonth="DisplayVM.AttendanceDateList2ndMonth">
	</AttendanceDateCalendar>
</div>

<div class="@MediaQuery.SmMdOrLgOrXl.DivClass">
	<AttendanceDateCalendar IsXs="false"
													AttendanceDateList="DisplayVM.AttendanceDateList"
													AttendanceDateList2ndMonth="DisplayVM.AttendanceDateList2ndMonth">
	</AttendanceDateCalendar>
</div>

@* Cost *@
<hr class="warning d-print-none" />

@* Cost Non-Print (hidden-xs) *@
<div class="d-print-none">
	<div class="d-none d-sm-block">
		<CostAccountStyle DisplayVM="@State!.Value.DisplayVM"></CostAccountStyle>
	</div>

	@* Cost Non-Print (visible-xs) *@
	<div class="d-block d-sm-none">
		<div class="row">

			<div class="col-2">
				<h4>Cost</h4>
			</div>
			<div class="col-10">
				<ul class="">
					<li>Registration Cost: <span class="float-end">@DisplayVM.RegistrationFeeAdjusted</span></li>
					<li>Total: <span class="float-end"><b>@DisplayVM.RegistrationFeeAdjusted</b></span></li>
				</ul>
			</div>
		</div>
	</div>

</div>

@* Cost Print *@
<div class="d-none d-print-block">
	<CostAccountStyle DisplayVM="@State!.Value.DisplayVM"></CostAccountStyle>
</div>

@if (!String.IsNullOrEmpty(DisplayVM.Notes))
{
	<hr class="warning d-print-none" />
	<div class="row">
		<div class="col-sm-2">
			<h4>Notes</h4>
		</div>
		<div class="col-sm-10">
			@DisplayVM.Notes
		</div>
	</div>
}

<div class="row d-none d-print-block">
	<br />
	<div class="col-12">
		<Address OnOneLine="true" UseLabel="true" />
	</div>
</div>
