@using LivingMessiah.Web.Pages.Sukkot.Constants
@using SukkotApi.Domain
@using SukkotApi.Domain.Enums

@{
	string Phone2 = !String.IsNullOrEmpty(@vwRegistration.Phone) ? $"Phone: {@vwRegistration.Phone}, " : "";
}

@* General <div class="row"></div> *@
<div class="d-print-none">
	<div class="d-none d-sm-block">

		<div class="row">
			<div class="col-sm-12">
				@* @Html.DisplayFor(model => vwRegistration.EMail) ...  @Html.DisplayFor(model => vwRegistration.Status) *@
				<small class="float-end">EMail: @vwRegistration.EMail, @Phone2 Status: @vwRegistration.StatusName</small>
				<h4>General</h4>
			</div>
		</div>

	</div>

	<div class="d-block d-sm-none">

		<div class="row">
			<div class="col-2">
				<h4>General</h4>
			</div>
			<div class="col-10">
				<ul>
					<li>Registration#: @vwRegistration.Id</li>
					<li>EMail: @vwRegistration.EMail</li>
					<li>Phone: @vwRegistration.Phone</li>
					<li>Status: @vwRegistration.StatusName</li>
				</ul>
			</div>
		</div>

	</div>
</div>

<div class="row d-none d-print-block">
	<div class="col-5">
		<h3>General</h3>
	</div>
	<div class="col-7">
		<ul>
			<li>Registration#: @vwRegistration.Id</li>
			<li>EMail: @vwRegistration.EMail</li>
			<li>Phone: @vwRegistration.Phone</li>
			<li>Status: @vwRegistration.StatusName</li>
		</ul>
	</div>
</div>


@* House Rules Agreement *@
<hr class="warning d-print-none" />
<div class="row">
	<div class="col-sm-12">
		<small class="float-end">Agreed on: @vwRegistration.HouseRulesAgreementDate</small>
		<h4>House Rules Agreement</h4>
	</div>
</div>


@* Attendance *@
<hr class="warning d-print-none" />

<div class="d-print-none">
	<div class="d-none d-sm-block">

		<div class="row">
			<div class="col-6">
				<h4>Attendance</h4>

				<SfCalendar TValue="DateTime?"
										IsMultiSelection="true" ShowTodayButton="false"
										Values="@vwRegistration.AttendanceDateList"
										Min="@DateRangeAttendance.DateRange.MinDate"
										Max="@DateRangeAttendance.DateRange.MaxDate">
				</SfCalendar>

			</div>

			<div class="col-6">
				<div class="card border-primary mb-3">
					<div class="body">
						<ul>
							<li>Adults: <span class="">@vwRegistration.Adults</span></li>
							<li>Child (Big):  <span class="">@vwRegistration.ChildBig</span></li>
							<li>Child (Small):  <span class="">@vwRegistration.ChildSmall</span></li>
						</ul>
					</div>
				</div>
			</div>

		</div>
	</div>

	@* Non-Print (visible-xs) *@
	<div class="d-block d-sm-none">

		<div class="row">
			<div class="col-12">
				<h4>Attendance</h4>
			</div>

			<div class="col-12">
				<div class="card border-primary mb-3">
					<div class="body">
						<ul>
							<li>Adults: <span class="">@vwRegistration.Adults</span></li>
							<li>Child (Big):  <span class="">@vwRegistration.ChildBig</span></li>
							<li>Child (Small):  <span class="">@vwRegistration.ChildSmall</span></li>
						</ul>
					</div>
				</div>
			</div>

		</div>

		<div class="row">
			<div class="col-12">

				<SfCalendar TValue="DateTime?"
										IsMultiSelection="true" ShowTodayButton="false"
										Values="@vwRegistration.AttendanceDateList"
										Min="@DateRangeAttendance.DateRange.MinDate"
										Max="@DateRangeAttendance.DateRange.MaxDate">
				</SfCalendar>

			</div>
		</div>

	</div>

</div>

<div class="row d-none d-print-block">
	<div class="col-4">
		<h3>Attendance</h3>

		<SfCalendar TValue="DateTime?"
								IsMultiSelection="true" ShowTodayButton="false"
								Values="@vwRegistration.AttendanceDateList"
								Min="@DateRangeAttendance.DateRange.MinDate"
								Max="@DateRangeAttendance.DateRange.MaxDate">
		</SfCalendar>


	</div>
	<div class="col-8">

		<div class="card border-primary mb-3">

			<div class="body">
				<ul>
					<li>Adults: <span class="">@vwRegistration.Adults</span></li>
					<li>Child (Big):<span class="">@vwRegistration.ChildBig</span></li>
					<li>Child (Small):<span class="">@vwRegistration.ChildSmall</span></li>
				</ul>
			</div>
		</div>
	</div>
</div>



@* Cost *@
<hr class="warning d-print-none" />

@* Cost Non-Print (hidden-xs) *@
<div class="d-print-none">
	<div class="d-none d-sm-block">
		<CostAccountStyle vwRegistration="@vwRegistration"></CostAccountStyle>
	</div>

	@* Cost Non-Print (visible-xs) *@
	<div class="d-block d-sm-none">
		<div class="row">

			<div class="col-2">
				<h4>Cost</h4>
			</div>
			<div class="col-10">
				<ul class="">
					<li>Registration Cost: <span class="float-end">@vwRegistration.RegistrationFeeAdjusted</span></li>
					<li>Total: <span class="float-end"><b>@vwRegistration.RegistrationFeeAdjusted</b></span></li>
				</ul>
			</div>
		</div>
	</div>

</div>

@* Cost Print *@
<div class="d-none d-print-block">
	<CostAccountStyle vwRegistration="@vwRegistration"></CostAccountStyle>
</div>

@if (!String.IsNullOrEmpty(vwRegistration.Notes))
{
	<hr class="warning d-print-none" />
	<div class="row">
		<div class="col-sm-2">
			<h4>Notes</h4>
		</div>
		<div class="col-sm-10">
			@vwRegistration.Notes
		</div>
	</div>
}




<div class="row d-none d-print-block">
	<br />
	<div class="col-12">
		<b>Mailing Address</b>: Living Messiah Ministries, 19 North Robson #106, Mesa, AZ 85201
	</div>
</div>