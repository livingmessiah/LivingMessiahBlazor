@page "/UpcomingEventsAdminGrid"
@using LivingMessiah.Web.Pages.UpcomingEvents.Queries

@using Page = LivingMessiah.Web.Links.UpcomingEventsAdmin
<PageTitle>@Page.Grid.Title</PageTitle>

<h2 class="mt-2">
	<i class="@Page.Grid.Icon"></i> @Page.Grid.Title
</h2>

<div class="card bg-light text-muted ">
	<div class="card-body my-1 pl-1 py-0">
		<ul class="list-inline float-end">
			<li class="list-inline-item"><small>Days Past: @DaysPast</small></li>
			<li class="list-inline-item"><small>, Days Ahead: @DaysAhead</small></li>
			<li class="list-inline-item"><small>, Row Cnt: @RowCnt</small></li>
		</ul>
	</div>
</div>

<div class="col-lg-12 control-section">
	<div class="content-wrapper">
		<div class="row mt-4">

			@* @ref="sfGrid" *@

			<SfGrid ID="Grid"
							DataSource="@SpecialEvents"
							AllowSelection="true" AllowFiltering="true" AllowSorting="true">
				<GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Menu"></GridFilterSettings>

				@*  CommandClicked="OnSaveClicked" *@

				<GridSortSettings>
					<GridSortColumns>
						<GridSortColumn Field="@nameof(SpecialEvent.EventDate)" Direction="SortDirection.Descending" />
					</GridSortColumns>
				</GridSortSettings>

				@*<GridEvents TValue="UpcomingEvent" QueryCellInfo="CustomizeCell"></GridEvents>*@
				@* ... RowSelected="RowSelectHandler" RowDeselected="RowDeSelectHandler" />*@

				<GridColumns>

					<GridColumn Field=@nameof(SpecialEvent.EventDate) Format="yyyy/MM/dd" HeaderText="Date" Width="40" AllowSorting="true" AllowFiltering="false">
					</GridColumn>

					<GridColumn Field=@nameof(SpecialEvent.SpecialEventTypeId) HeaderText="Event Type" Width="40" AllowSorting="false" AllowFiltering="true">
					</GridColumn>

					<GridColumn Field=@nameof(SpecialEvent.Title) HeaderText="Title" Width="90" AllowSorting="false" AllowFiltering="false">
					</GridColumn>

					<GridColumn Field=@nameof(SpecialEvent.SubTitle) HeaderText="Sub Title" Width="90" AllowSorting="false" AllowFiltering="false">
					</GridColumn>

					<GridColumn Field=@nameof(SpecialEvent.DaysAhead) HeaderText="Days Ahead" Width="60" AllowSorting="false" AllowFiltering="false">
					</GridColumn>

					@*
						ImageUrl, YouTubeId, WebsiteUrl, WebsiteDescr, Description
					*@


				</GridColumns>

			</SfGrid>
		</div>
	</div>
</div>
