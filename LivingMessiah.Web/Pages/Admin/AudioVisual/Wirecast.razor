@page "/Wirecast/Index/"
@using static LivingMessiah.Web.Links.Wirecast
@using static LivingMessiah.Web.Services.Auth0;

<PageHeader Icon="@Icon" Title="@Title"></PageHeader>

<WirecastHeader WirecastVM="WirecastVM" />

@*<AuthorizeView Roles="@Roles.AdminOrAudiovisual">
</AuthorizeView>*@

<LoadingComponent IsLoading="WirecastVM==null">
	<EditForm Model="@WirecastVM"
						OnValidSubmit="UpdateWirecastLink"
						class="card card-body bg-light mt-5">
		<DataAnnotationsValidator />
		<ValidationSummary />

		<input type="hidden" asp-for="@WirecastVM.Wirecast.Id" />

		<fieldset class="mt-3">
			<legend class="text-primary">Wirecast Link</legend>

			<div class="row mt-n2">

				<div class="col-sm-4">
					<div class="form-group">
						@*<label for="wirecast" class="control-label">Wirecast Link</label>*@
						<InputText id="wirecast" class="form-control" @bind-Value="WirecastVM.Wirecast.WirecastLink" />
						<ValidationMessage For="@(() => WirecastVM.Wirecast)" />
					</div>
				</div>

			</div>
		</fieldset>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-lg">
						<i class="fas fa-save"></i> Update
					</button>
				</div>
			</div>
		</div>

	</EditForm>
</LoadingComponent>

<LoadingComponent IsLoading="ScratchPad==null">
	<EditForm Model="@ScratchPad"
						OnInvalidSubmit="UpdateScratchPad"
						class="card card-body bg-light mt-5">
		<DataAnnotationsValidator />
		<ValidationSummary />

		<fieldset class="mt-3">
			<legend class="text-primary">Scratch Pad</legend>

			<div class="row mt-n2">

				<div class="col-12">
					<div class="form-group">
						@*<label for="scratchPad" class="control-label">Scratch Pad</label>*@
						<InputTextArea id="scratchPad" class="form-control" @bind-Value="WirecastVM.ScratchPad.WireCast" />
						<ValidationMessage For="@(() => WirecastVM.ScratchPad.WireCast)" />
					</div>
				</div>

			</div>
		</fieldset>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-lg">
						<i class="fas fa-save"></i> Update
					</button>
				</div>
			</div>
		</div>

	</EditForm>
</LoadingComponent>



