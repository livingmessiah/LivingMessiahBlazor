@page "/Wirecast"
<LoadingComponent IsLoading="WirecastVM==null">

	<ul class="list-inline">
		<li>Id: @WirecastVM.Id</li>
		<li>Date: @WirecastVM.ShabbatDate.ToString()</li>
	</ul>

	<a href="@WirecastVM.WirecastLink"
		 class="btn btn-success" title="Link to Wirecast">
		<i class="fas fa-podcast fa-fw fa-3x" aria-hidden="true"></i>
	</a>
	<p><small>@WirecastVM.WirecastLink</small></p>

	<hr class="warning" />

</LoadingComponent>


@if (DatabaseError)
{
	<p class="text-danger"><em>@DatabaseErrorMsg</em></p>
}
else
{
	<p class="text-success">Record Found</p>
}

