@page "/Admin/AudioVisual/WeeklyVideoAddForm/"
@using LivingMessiah.Web.SmartEnums
@using Page = LivingMessiah.Web.Links.Admin.AudioVisual.Add
@using PageBack = LivingMessiah.Web.Links.Admin.AudioVisual

<PageTitle>@Page.Title</PageTitle>
<div class="pb-2 mt-4 mb-2 border-bottom">
	<h2><i class="@Page.Icon"></i> @Page.Title</h2>
</div>


<LoadingComponent IsLoading="YouTubeList==null">
	<h4 class="mt-4 mb-2"><span class="badge bg-warning">YouTube Feed</span></h4>


	<!-- foreach (var item in YouTubeList.Where(w => w.Id is null)) -->
	@foreach (var item in YouTubeList)
	{
		<!-- IsXsOrSm="true" -->
		<div class="d-md-none mb-3">

			<div class="card bg-light" >
				<img src='https://img.youtube.com/vi/@item.YouTubeId/mqdefault.jpg' class="card-img-top" alt="@item.Title">
				<div class="card-body">
					<h5 class="card-title">@item.Title</h5>
					<p class="card-text">Publish Date: @item.PublishDate.Date.ToShortDateString()</p>
					<button class="btn-sm btn-outline-success" @onclick="() => Add(item)">
						<i class="fas fa-plus"></i>
					</button>
				</div>
			</div>

		</div>

		<!-- IsXsOrSm="false" -->
		<div class="d-none d-md-block mt-3">

			<div class="row mb-2">
				<div class="col-4">
					<a href="https://www.youtube.com/watch?v=@item.YouTubeId" target="_blank" title="@item.YouTubeId">
						<img src='https://img.youtube.com/vi/@item.YouTubeId/mqdefault.jpg' class='img-thumbnail' />
					</a>
				</div>

				<div class="col-8">
					<div class="card">
						<div class="card-body">
							<p class="mb-1">Title: @item.Title</p>
							<p class="mb-1">Publish Date: @item.PublishDate.Date.ToShortDateString()</p>
							<button class="btn-sm btn-outline-success" @onclick="() => Add(item)">
								<i class="fas fa-plus"></i>
							</button>
						</div>
					</div>
				</div>
			</div>

		</div>

	}
</LoadingComponent>



<LoadingComponent IsLoading="vm==null || ShabbatWeekList==null">
	<h4 class="mt-4 mb-1"><span class="badge bg-warning">Add Form</span></h4>

	<EditForm Model="vm"
						OnValidSubmit="HandleValidSubmit"
						class="card card-body bg-light mt-1">
		<DataAnnotationsValidator />
		<ValidationSummary />

		<div class="mb-3 row">

			@if (ShabbatWeekList.Any())
			{
				<label for="shabbatWeekId" class="col-md-3 col-form-label">Shabbat Week Id:</label>
				<div class="col-md-9">
					<InputSelect id="shabbatWeekId" @bind-Value="vm.ShabbatWeekId" class="form-control">
						@foreach (var item in ShabbatWeekList)
						{
						<option value="@item.Id">@item.ShabbatDate.ToShortDateString() [@item.Id]</option>
						}
				</InputSelect>
			</div>
			}
			else
			{
				<p class="text-warning">ShabbatWeekList is empty</p>
			}
		</div>

		<div class="mb-3 row">
			<label for="youTubeId" class="col-md-3 col-form-label">YouTube Id:</label>
			<div class="col-md-9">
				<InputText id="youTubeId" class="form-control" @bind-Value="vm.YouTubeId" />
				<ValidationMessage For="@(() => vm.YouTubeId)" />
			</div>
		</div>

		<div class="mb-3 row">
			<label for="title" class="col-md-3 col-form-label">Title:</label>
			<div class="col-md-9">
				<InputText id="title" class="form-control" @bind-Value="vm.Title" />
				<ValidationMessage For="@(() => vm.Title)" />
			</div>
		</div>

		<div class="mb-3 row">
			<label for="type" class="col-md-3 col-form-label">Type</label>
			<div class="col-md-9">
				<InputSelect id="type" @bind-Value="vm.WeeklyVideoTypeId" class="form-control">
					@foreach (var item in WeeklyVideoType.List.ToList())
					{
						<option value="@item.Value">@item.Name</option>
					}
				</InputSelect>
			</div>

		</div>


		<div class="row">
			<div class="col-sm-6">
				<div class="mb-3">
					<button class="btn btn-success btn-md" type="submit">
						<i class="fas fa-save"></i> Save
					</button>
				</div>

			</div>
		</div>

	</EditForm>

</LoadingComponent>


<h4 class="mt-4 mb-1"><span class="badge bg-warning">Weekly Video Table</span></h4>

<LoadingComponent IsLoading="WeeklyVideoTableList==null">
	<TableTemplate Items="WeeklyVideoTableList">
		<TableHeader>
			<th>Id</th>
			<th>Shabbat Week</th>
			<th>WVT</th>
			<th>YouTube Id</th>
			<th>Title</th>
		</TableHeader>
		<RowTemplate>
			<td>
				<button @onclick="@(e => Edit_ButtonClick(context.Id))"
								title="Weekly Video Edit" class="btn btn-outline-default btn-sm">
								@context.Id <i class="fas fa-pencil-alt"></i>
				</button>
			</td>


			<td><small><sup class="text-black-50">@context.ShabbatWeekId</sup></small> @context.ShabbatDate.ToShortDateString()</td>
			<td><small><sup class="text-black-50">@context.WeeklyVideoTypeId</sup></small> @context.WeeklyVideoTypeDescr</td>
			<td>
				@if (context.YouTubeId != null)
				{
					<a href="@context.Url()" target="_blank"
					 title="@context.Url()">
						<u>@context.YouTubeId</u>
						<i class="fas fa-external-link-square-alt"></i>
					</a>
				}
				else
				{
					<p class="text-info"><i>Missing</i></p>
				}
			</td>

			<td>@context.Title</td>
			<td></td>
		</RowTemplate>
	</TableTemplate>
</LoadingComponent>

@if (DatabaseError)
{
	<p class="text-danger"><em>@DatabaseErrorMsg</em></p>
}
else
{
	if (DatabaseWarning)
	{
		<p class="text-warning">@DatabaseWarningMsg</p>
	}
	else
	{
		if (DatabaseInformation)
		{
			<p class="text-info">@DatabaseInformationMsg</p>
		}
	}
}

<div class="row d-print-none">
	<div class="col-12">
		<a href="@PageBack.Index"
			 class="btn btn-info" title="Back to @PageBack.Title">
			<i class="far fa-arrow-alt-circle-left"></i> Back to @PageBack.Title
		</a>
	</div>
</div>