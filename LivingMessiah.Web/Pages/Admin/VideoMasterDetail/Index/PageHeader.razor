@using Page = LivingMessiah.Web.Links.Admin.VideoMasterDetail
@*@using LivingMessiah.Web.Pages.Sukkot.SuperUser.Index*@

<PageTitle>@Page.Title</PageTitle>

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<div class="pb-1 mt-4 mb-2">
	<div class="pb-1 mt-4 mb-1 border-bottom border-info">
		@if (IsXsOrSm)
		{
			<h4>
				<i class="@Page.Icon"></i> @Page.Title
				<span class="@State!.Value.PageHeaderVM!.Color float-end">
					<i class="@State!.Value.PageHeaderVM!.Icon"></i>
					@State!.Value.PageHeaderVM!.Title
				</span>
			</h4>
		}
		else
		{
			<h1>
				<i class="@Page.Icon"></i> @Page.Title
				<span class="@State!.Value.PageHeaderVM!.Color float-end">
					<i class="@State!.Value.PageHeaderVM!.Icon"></i>
					@State!.Value.PageHeaderVM!.Title
				</span>
			</h1>

		}
	</div>
</div>

@code {
	[Inject] private IState<IndexState>? State { get; set; }
	[Parameter, EditorRequired] public bool IsXsOrSm { get; set; }
}
