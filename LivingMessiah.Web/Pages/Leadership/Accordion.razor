@using LivingMessiah.Web.Pages.Leadership.Enums
@using Syncfusion.Blazor.Navigations

<SfAccordion ExpandMode="ExpandMode.Single">
	<AccordionItems>
		@foreach (var item in LivingMessiah.Web.Pages.Leadership.Enums.Office.List.OrderBy(o => o.Value).Where(w => w.IsFilled == true).ToList())
		{
			<AccordionItem>
				<HeaderTemplate>
					<div class="my-1">
						<img src="@Blobs.Leadership(item.IconFile)" class="mr-3 rounded-circle" />  @item.OfficeHolderName <i>@item.Title</i>
					</div>
				</HeaderTemplate>
				<ContentTemplate>
					<OfficeContent Office="@item" IsXs="true"></OfficeContent>
				</ContentTemplate>
			</AccordionItem>
		}
	</AccordionItems>
</SfAccordion>

