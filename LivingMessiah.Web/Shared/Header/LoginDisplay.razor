<div class="container-fluid bg-light">

	<div class="@MediaQuery.XsOrSm.DivClass">

		<div class="row pt-2 pb-1 d-print-none">
			<div class="col-12">
				<AuthorizeView>
					<Authorized>
						<LogoutForm />
