					</Authorized>

					<NotAuthorized>
						<div class="col-12">
							<LoginAnchor />
						</div>
					</NotAuthorized>
				</AuthorizeView>
			</div>
		</div>

		<div class="row pt-2 pb-1 d-print-none">
			<div class="col-12">
				<BibleSearchTypeahead />
			</div>
		</div>

	</div>

	<div class="@MediaQuery.MdOrLgOrXl.DivClass">

		<div class="row pt-2 pb-1 d-print-none">
			<div class="col-6">
				<BibleSearchTypeahead />
			</div>
			<div class="col-6">
				<AuthorizeView>
					<Authorized>
						<LogoutForm />
						<ProfileAnchor IsXsOrSm="false" />
					</Authorized>

					<NotAuthorized>
						<div class="col-12">
							<LoginAnchor />
						</div>
					</NotAuthorized>
				</AuthorizeView>

			</div>
		</div>
	</div>

