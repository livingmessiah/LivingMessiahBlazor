
<LoadingComponent IsLoading="CurrentWeeklyVideo==null" TurnSpinnerOff="TurnSpinnerOff">
	<div class="card  border-primary my-5">
		<div class="card-header">

			<div class="row">
				<div class="col-6">
					<h4>
						<i class="far fa-calendar"></i>
						<span class='badge bg-primary'>@CurrentWeeklyVideo!.EventDate().Date.ToString(DateFormat.ddd_mm_dd)</span>
					</h4>
				</div>
				<div class="col-6">
					<h5>
						<span class="float-end">@CurrentWeeklyVideo!.WvtDescr</span>
					</h5>
				</div>
			</div>

		</div>

		<div class="card-body">
			@* <i class="@CurrentWeeklyVideo.WvtIcon"></i> *@
			<h3 class="card-text text-center">
				@CurrentWeeklyVideo.Title
			</h3>
		</div>

		<div class="card-body text-center">


			<div class="ratio ratio-16x9">
				<iframe src="https://www.youtube.com/embed/@CurrentWeeklyVideo.YouTubeId?rel=0"
								title="@CurrentWeeklyVideo.Title | @CurrentWeeklyVideo.YouTubeId" allowfullscreen></iframe>
			</div>

			<p class="my-0">
				<i class="fas fa-share fa-rotate-270"></i> Watch the video when it is live
			</p>

		</div>



		<div class="card-footer">
			
			@* ToDo: Reference CurrentWeeklyVideoQuery for this content *@
			
			@* This obsolete 176-enahance-InDepthStudy *@
			
			Bible Link 

			@if (CurrentWeeklyVideo.WvtId <= 2)
			{
				<a href="@CurrentWeeklyVideo.BiblicalUrlReference"
					 class="btn btn-primary btn-sm my-2" target="_blank">
					<span class="fas fa-external-link-alt"></span>
					<b>@CurrentWeeklyVideo.ParashaName</b>
				</a>
			}
			else
			{
				<a href="@CurrentWeeklyVideo.BiblicalUrlReference"
					 class="btn btn-primary btn-sm my-2" target="_blank">
					<span class="fas fa-external-link-alt"></span>
					<b>@CurrentWeeklyVideo.BookTitle @CurrentWeeklyVideo.Chapter</b> <i>@CurrentWeeklyVideo.BookChapterTitle</i>
				</a>
			}
		
		</div>


	</div>

</LoadingComponent>
