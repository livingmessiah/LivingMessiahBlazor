@typeparam TItem

@if (Items == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="@HeaderCSS">
		<thead>
			<tr>@TableHeader</tr>
		</thead>
		<tbody>
			@foreach (var item in Items)
			{
				<tr>@RowTemplate!(item)</tr>
			}
		</tbody>
		<tfoot>
			<tr class="@TableFooterColor">@TableFooter</tr>
		</tfoot>
	</table>
}
