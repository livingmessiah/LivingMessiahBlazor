@using static LivingMessiah.Web.Links.Account
@using LivingMessiah.Web.Shared
@using LivingMessiah.Web.SmartEnums

<div class="container-fluid bg-light">

	<div class="@MediaQuery.XsOrSm.DivClass">

		<div class="row pt-2 pb-1 d-print-none">
			<div class="col-12">
				<AuthorizeView>
					<Authorized>

						<form class="float-end" method="post" action="@LogoutAction">
							<button type="submit" class="btn btn-xs btn-outline-info text-black-50">
								<u>Log out</u> <i class="fas fa-sign-out-alt"></i>
							</button>
						</form>

						<a class="mt-1"
							 href="@Profile" title="Role: @Role; IsAdmin:@IsAdmin; Email:@EmailAddress">
							@((MarkupString)NameTiny) @((MarkupString)BlueCheck)
						</a>
					</Authorized>

					<NotAuthorized>

						<div class="col-12">
							<a href="@Login" class="btn btn-xs btn-outline-info float-end text-black-50">
								<u>Log in</u> <i class="fas fa-sign-in-alt"></i>
							</a>
						</div>

					</NotAuthorized>
				</AuthorizeView>
			</div>
		</div>

		<div class="row pt-2 pb-1 d-print-none">
			<div class="col-12">
				<BibleSearchForm />
			</div>
		</div>

	</div>

	<div class="@MediaQuery.MdOrLgOrXl.DivClass">

		<div class="row pt-2 pb-1 d-print-none">
			<div class="col-6">
				<BibleSearchForm />
			</div>
			<div class="col-6">
				<AuthorizeView>
					<Authorized>
						<form class="float-end" method="post" action="@LogoutAction">
							<button type="submit" class="btn btn-xs btn-outline-info text-black-50">
								<u>Log out</u> <i class="fas fa-sign-out-alt"></i>
							</button>
						</form>
						<p class="">
						<a href="@Profile" title="Role: @Role; IsAdmin:@IsAdmin; Email:@EmailAddress">
							@((MarkupString)NameTiny) @((MarkupString)BlueCheck)
						</a>

						</p>
				
					</Authorized>

					<NotAuthorized>

						<div class="col-12">
							<a href="@Login" class="btn btn-xs btn-outline-info float-end text-black-50">
								<u>Log in</u> <i class="fas fa-sign-in-alt"></i>
							</a>
						</div>

					</NotAuthorized>
				</AuthorizeView>

			</div>
		</div>
	</div>

</div>

